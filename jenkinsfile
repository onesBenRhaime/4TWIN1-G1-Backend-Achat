pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Status Mysql') {
             steps {
                 script {
                     sh 'sudo systemctl start mysql'
                 }
             }
        }
        stage('Maven Clean Compile') {
                  steps {
                      sh 'mvn clean'
                      echo 'Running Maven Compile'
                      sh 'mvn compile'
                  }
        }

       stage('Tests - JUnit/Mockito') {
             steps {
                 sh 'mvn test'
             }
       }


    }
}