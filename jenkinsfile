pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Maven Clean Compile') {
                  steps {
                      sh 'mvn clean'
                      echo 'Running Maven Compile'
                      sh 'mvn compile'
                  }
        }

       stage('Tests - JUnit/Mockito') {
             steps {
                 sh 'mvn test'
             }
       }
       stage('Build package') {
            steps {
                sh 'mvn package'
            }
       }
       stage('Maven Install') {
            steps {
                sh 'mvn install'
            }
       }
       stage('SonarQube Analysis') {
           def mvn = tool 'Default Maven';
           withSonarQubeEnv() {
             sh "${mvn}/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=4TWIN1-G1-Stock -Dsonar.projectName='4TWIN1-G1-Stock'"
           }
         }

    }
}