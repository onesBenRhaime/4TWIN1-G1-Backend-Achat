pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
       stage('Status MySQL') {
            steps {
                script {
                   sh 'sudo docker run -d --name 3d75c95422f5  -p 3306:3306 -e MYSQL_ROOT_PASSWORD= mysql:latest'
                }
            }
       }
        stage('Maven Clean Compile') {
                  steps {
                      sh 'mvn clean'
                      echo 'Running Maven Compile'
                      sh 'mvn compile'
                  }
        }

       stage('Tests - JUnit/Mockito') {
             steps {
                 sh 'mvn test'
             }
       }


    }
}