pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Clean') {
            steps {
                sh 'rm -rf target/*'
            }
        }

        stage('MAVEN BUILD') {
            steps {
                sh 'mvn clean compile'
            }
        }

       stage('Tests - JUnit/Mockito') {
             steps {
                 sh 'mvn test'
             }
       }

       stage('Package') {
              steps {
                  sh 'mvn package'
              }
       }
    }
}