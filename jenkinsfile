pipeline {
    agent any



    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Clean') {
            steps {
                sh 'rm -rf target/*'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

       stage('MOCKITO') {
             steps {
                 sh 'mvn test'
             }
         }

         stage('SonarQube Analysis') {
         steps{
         script {
         def scannerHome = tool 'sonar'
         withSonarQubeEnv {
         sh "${scannerHome}/bin/sonar-scanner"
         }
         }
         }
         }




        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }













    }

    post {
        success {
            echo 'Build successful! Deploying...'

        }
        failure {
            echo 'Build failed! Sending notification...'

        }
    }
}