pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Clean') {
            steps {
                sh 'rm -rf target/*'
            }
        }

        stage('MAVEN BUILD') {
            steps {
                sh 'mvn clean compile'
            }
        }

       stage('MOCKITO') {
             steps {
                 sh 'mvn test'
             }
       }
       stage("SONARQUBE") {
             steps {
                 withSonarQubeEnv(installationName: 'sonar') {
                       sh "mvn -DskipTests sonar:sonar"
                 }
             }
       }
       stage('Package') {
              steps {
                  sh 'mvn package'
              }
       }
    }
}